<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:paddingLeft="18dp"
        android:text="@string/seller"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="425dp" />

    <Button
        android:id="@+id/btnSeller"
        android:layout_width="134dp"
        android:layout_height="180dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/secondary"
        android:paddingLeft="40dp"
        app:cornerRadius="100dp"
        app:icon="@drawable/outline_shopping_cart_black_48"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="229dp" />

    <Button
        android:id="@+id/btnUser"
        android:layout_width="135dp"
        android:layout_height="182dp"
        android:backgroundTint="@color/primary"
        android:paddingLeft="40dp"
        app:cornerRadius="100dp"
        app:icon="@drawable/outline_account_circle_black_48"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnSeller"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="227dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="211dp"
        android:layout_height="116dp"
        app:srcCompat="@drawable/logo1"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="70dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/outline_reply_black_48"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="606dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:paddingLeft="18dp"
        android:text="@string/user"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="425dp" />

</androidx.constraintlayout.widget.ConstraintLayout>